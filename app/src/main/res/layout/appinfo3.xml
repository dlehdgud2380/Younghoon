<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="${relativePackage}.${activityClass}">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/cardbg"
        android:gravity="center"
        android:padding="10dp"
        android:text="개발자에게 버그리포트"
        android:textColor="#33b5e5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="버그리포트시 주의 할점"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#33b5e5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="*정확히 어떤 버그인지 구체적으로 설명해서 보내주세요.\n(사진도 괜찮습니다.)\n\n*개발자 입장에서 구현 불가능하고 또는 시간이 너무 오래걸리는 기능요구는 들어드리기 힘듭니다 ㅠㅠ\n\n*허위적인 버그리포트는 보내지 말아주세요.\n\n*버그리포트와 관계없는 메일을 보내시면 그 메일은 스팸처리 하겠습니다."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#33b5e5"
        android:textSize="13dp" />


    <EditText
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="문제점이나 개선점을 써주세요"
        android:textColorHint="#555"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="제목을 써주세요"
        android:textColor="#fff"
        android:textColorHint="#555"
        android:textCursorDrawable="@null"
        android:layout_above="@+id/body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="개발자 이메일"
        android:textColor="#fff"
        android:textColorHint="#555"
        android:textCursorDrawable="@null"
        android:layout_above="@+id/subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="dlehdgud2380@icloud.com" />


</RelativeLayout>
